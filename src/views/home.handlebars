<main class="product-list">
    <h2>Products</h2>
    <ul id="productList">
        {{#each products}}
        <li>
            <strong>{{this.title}}</strong> - ${{this.price}} <br />
            <p>{{this.description}}</p>
            <p>Stock: {{this.stock}} units</p>
            <p>Category: {{this.category}}</p>
            <ul>
                {{#each this.thumbnails}}
                <li><img src="{{this}}" alt="Product image" width="100" /></li>
                {{/each}}
            </ul>
        </li>
        {{/each}}
    </ul>
</main>